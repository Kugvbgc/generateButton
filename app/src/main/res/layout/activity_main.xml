<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/termInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:hint="Enter number of terms"
        android:inputType="number"
        android:layout_margin="@dimen/_20sdp"
        android:background="#FBB3B3"
        />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termInput"
        android:layout_margin="@dimen/_20sdp"
        android:text="Generate Series"
        />

    <TextView
        android:id="@+id/seriesOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/generateButton"
        android:layout_margin="@dimen/_20sdp"
        android:text=""
        android:textSize="@dimen/_20ssp"
        />

    <TextView
        android:id="@+id/seriesOutput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seriesOutput"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_20sdp"
        android:text=""
        android:textSize="@dimen/_20ssp"
        />

</RelativeLayout>